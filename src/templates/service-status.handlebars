<div class="">
    <div class="wrapper">
        <div class="col-wrap">
            <div class="col">
                <h2>Average response time</h2>
                {{#each averageResponseTimes}}
                    <div class="col col--lg-18 padding-right--1 padding-left-sm--1 padding-left-md--1 margin-top--2 margin-right--1 margin-left-sm--0 margin-left-md--0 margin-left-lg--0 border--left-thick">
                        <p class="margin-top--0">{{description}}</p>
                        <p class="size--24 flush">{{responseTime}}ms</p>
                        <p class="flush">Uptime: {{percentageTimeUp}}%<br/> Downtime: {{percentageTimeDown}}%</p>
                    </div>
                {{/each}}
            </div>

        <div class="col">
            <h2>Average request times</h2>
            <div class="tabs">
                <div class="btn-group tab__btn-group">
                    <button class="btn btn--tab width--30 btn--tab-active" role="tab" aria-controls="request-times-daily--chart" aria-selected="true">
                        Today
                    </button>
                    <button class="btn btn--tab width--29" role="tab" aria-controls="request-times-monthly--chart">
                        30 days
                    </button>
                </div>
                <div id="request-times-daily--chart" class="tab__content height--40 margin-bottom--2 padding-top--2 padding-bottom--2" role="tabpanel">
                    <img src="../img/loader.gif" width="32px" class="margin-top--1"/>
                </div>
                <div id="request-times-monthly--chart" class="tab__content height--40 margin-bottom--2 padding-top--2 padding-bottom--2" role="tabpanel" aria-hidden="true">
                    <img src="../img/loader.gif" width="32px" class="margin-top--1"/>
                </div>
            </div>
        </div>
            <div class="col margin-bottom--6">
                {{#each averageRequestTimes}}
                    <div class="col col--lg-18 padding-right--1 padding-left-sm--1 padding-left-md--1 margin-top--2 margin-right--1 margin-left-sm--0 margin-left-md--0 margin-left-lg--0 border--left-thick">
                    <p class="margin-top--0">{{description}}</p>
                    <p class="margin-top--0 margin-bottom--1 size--24">{{requestTime}}ms</p>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>